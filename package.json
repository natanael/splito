{
	"name": "splito",
	"version": "0.0.22",
	"description": "Passive event based multifile editor",
	"main": "index.js",
	"scripts": {
		"test": "jest --verbose --roots src",
		"build": "tsc",
		"start": "ts-node ./src/index.ts",
		"dev": "nodemon src/index.ts --exec ts-node --watch src/index.ts",
		"semantic-release": "semantic-release -b master && npm publish && semantic-release post",
		"manual": "npm run build && npm version patch && npm publish"
	},
	"bin": {
		"splito": "./bin/splito.js"
	},
	"engines": {
		"node": ">=12"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/natanael/splito.git"
	},
	"keywords": [
		"editor",
		"splito",
		"repl",
		"multifile",
		"terminal",
		"console"
	],
	"author": {
		"name": "Natanael Guerra",
		"url": "http://github.com/natanael"
	},
	"license": "MIT",
	"dependencies": {
		"chalk": "^4.1.0",
		"chokidar": "^3.4.3",
		"fs-extra": "^9.0.1",
		"glob": "^7.1.6",
		"lodash": "^4.17.20"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.4",
		"@types/glob": "^7.1.3",
		"@types/lodash": "^4.14.165",
		"@types/node": "^14.14.10",
		"jest": "^22.1.4",
		"prettier": "^1.10.2",
		"semantic-release": "^12.2.4",
		"ts-node": "^9.0.0",
		"typescript": "^4.1.2"
	},
	"prettier": {
		"useTabs": true,
		"printWidth": 70
	},
	"directories": {
		"lib": "./lib"
	},
	"babel": {
		"presets": [
			[
				"env"
			]
		]
	}
}
